@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<section class="wrapper">
    <div class="container">
        <div class="col-sm-12 offset-sm-0 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3 mx-auto text-start">
            <form id="account" method="post" class="rounded bg-white shadow p-5 text-start">
                <h3 class="text-dark fw-bolder fs-4 mb-2 text-center">Log In</h3>
                <div class="fw-normal text-muted text-center mb-4">
                    New Here? <a asp-page="./Register" asp-route-ReturnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Create an Account</a>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger my-1"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger my-1"></span>
                </div>
                <div class="checkbox mt-2 text-center">
                    <label asp-for="Input.RememberMe" class="form-label text-primary fw-bold">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary my-4">Log in</button>
                </div>
            </form>
        </div>


