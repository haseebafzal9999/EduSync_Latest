@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="wrapper">
    <div class="container">
        <div class="col-sm-12 offset-sm-0 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3 mx-auto text-start">
            <form id="registerForm" class="rounded bg-white shadow p-5 text-start" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h3 class="text-dark fw-bolder fs-4 mb-2 text-center">Create An Account</h3>
                <div class="fw-normal text-muted text-center mb-4">
                    If you have already an Account? <a asp-page="./Login" asp-route-ReturnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Click Here</a>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- First Row for First Name and Last Name -->
                <div class="row">
                    <div class="form-floating col-md-6 mb-3">
                        <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="Name" />
                        <label asp-for="Input.FirstName" class="form-label"></label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6 mb-3">
                        <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Last" />
                        <label asp-for="Input.LastName" class="form-label"></label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Company Name -->
                <div class="row">
                    <div class="form-floating col-md-12 mb-3">
                        <input asp-for="Input.CompanyName" class="form-control" aria-required="true" placeholder="Company" />
                        <label asp-for="Input.CompanyName" class="form-label"></label>
                        <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Email -->
                <div class="row">
                    <div class="form-floating col-md-12 mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                @* <div class="row">
                    <div class="form-floating col-md-6 mb-3">
                        <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6 mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div> *@
                <!-- Phone Number and TVA Number -->
                <div class="row">
                    <div class="form-floating col-md-6 mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="Phone" />
                        <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6 mb-3">
                        <input asp-for="Input.TvaNumber" class="form-control" aria-required="true" placeholder="TVA" />
                        <label asp-for="Input.TvaNumber" class="form-label"></label>
                        <span asp-validation-for="Input.TvaNumber" class="text-danger"></span>
                    </div>
                </div>

                <!-- Address1 -->
                <div class="row">
                    <div class="form-floating col-md-12 mb-3">
                        <input asp-for="Input.Address1" class="form-control" aria-required="true" placeholder="Street Address" />
                        <label asp-for="Input.Address1" class="form-label"></label>
                        <span asp-validation-for="Input.Address1" class="text-danger"></span>
                    </div>
                </div>

                <!-- Address2 -->
                <div class="row">
                    <div class="form-floating col-md-12 mb-3">
                        <input asp-for="Input.Address2" class="form-control" aria-required="true" placeholder="State" />
                        <label asp-for="Input.Address2" class="form-label"></label>
                        <span asp-validation-for="Input.Address2" class="text-danger"></span>
                    </div>
                </div>

                <!-- Postcode and City -->
                <div class="row">
                    <div class="form-floating col-md-6 mb-3">
                        <input asp-for="Input.PostCode" class="form-control" aria-required="true" placeholder="Postcode" />
                        <label asp-for="Input.PostCode" class="form-label"></label>
                        <span asp-validation-for="Input.PostCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6 mb-3">
                        <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="City" />
                        <label asp-for="Input.City" class="form-label">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                </div>

                <!-- Country and Role -->
                <div class="row">
                    <div class="form-floating col-md-6 mb-3">
                        <select asp-for="Input.Country" asp-items="@Model.Input.EuropeanCountries" class="form-select">
                            <option disabled selected> Select Country</option>
                        </select>
                    </div>
                    <div class="form-floating col-md-6 mb-3">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option disabled selected> Select Role</option>
                        </select>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="row">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary my-4">Register</button>
                </div>
            </form>
        </div>


    </div>
</section>



